@model List<EFCore_sample.Models.Employee>
<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Employee" class="btn btn-success">Create</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td><b>Employee ID</b></td>
                    <td><b>Employee Name</b></td>
                    <td><b>Skill</b></td>
                    <td><b>Email</b></td>
                    <td><b>Salary</b></td>
                    <td><b>Address</b></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.Skill</td>
                        <td>@item.Email</td>
                        <td>@item.Salary</td>
                        <td>@item.Address</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-secondary">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id" class="bnt btn-primary">
                                Delete
                            </a>
                        </td>

                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>