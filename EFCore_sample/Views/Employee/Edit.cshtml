@model EFCore_sample.Models.Employee

<form asp-action="Edit" asp-area="Employee" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Employee Name:</label>
                <input asp-for="EmployeeName" type="text" class="form-control required" placeholder="Enter Employee name" tabindex="1">
            </div>
            <div class="form-group">
                <label>Skill set:</label>
                <input asp-for="Skill" type="text" class="form-control required" placeholder="Enter skill set" tabindex="2">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" type="text" class="form-control required" placeholder="Enter email" tabindex="3">
            </div>
            <div class="form-group">
                <label>Salary:</label>
                <input asp-for="Salary" type="text" class="form-control required" placeholder="Enter Salary" tabindex="4">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">Update Contact</button>
                    <a asp-action="Index" asp-controller="Employee" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>