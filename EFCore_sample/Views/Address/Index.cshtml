@model EFCore_sample.Models.Employee

<h1>Address Mapping</h1>


<form asp-action="Create" asp-area="Address" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Employee Name:</label>
                <select id="drpEmpList" class="form-control" asp-for="Id" asp-items="@(new SelectList(ViewBag.empList,"Id","EmployeeName"))">
                    <option value="">--Select--</option>
                </select>
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input asp-for="Address" type="text" class="form-control required" placeholder="Enter Employee Address" tabindex="2">
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary" asp-action="Edit" asp-controller="Address">Update Address</button>
                    <a asp-action="Index" asp-controller="Employee" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>
